page {
    height: 100%;
}
.detail {
    height: 100%;
    padding: 0 0 calc(env(safe-area-inset-bottom) + 48px);
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    text-shadow: 1px 1px 2px #fff, 0 0 0 rgba(0, 0, 0, 0.2), 1px 1px 2px #fff;
}
.header-view {
    padding: 0 10px;
}
.header {
    padding: 10px 0;
    display: flex;
    border-radius: 10px;
    box-shadow: 1px 1px 2px #d3e0ec, -1px -1px 2px #fff;
}
.header-item {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.header-income, .header-pay {
    flex: 1;
}
.header-date {
    padding: 0 20px 0 10px;
    text-align: center;
}
.header-month, .header-amount {
    margin-top: 8px;
    font-size: 20px;
}
.header-month {
    font-size: 20px;
    font-weight: 600;
}
.account-view {
    margin: 10px;
    flex: 1;
    overflow-y: hidden;
}
.account-scroll {
    height: 100%;
    border-radius: 10px;
    box-shadow: var(--soft-box-shadow-inset);
}
.account {
    margin: 0 10px;
    padding: 8px 10px;
    border-radius: 10px;
    text-shadow: var(--soft-text-shadow);
    box-shadow: 1px 1px 2px #d3e0ec, -1px -1px 2px #fff;
}
.account + .account {
    margin-top: 10px;
}
.account.current {
    box-shadow: inset 1px 1px 2px #d3e0ec, inset -1px -1px 2px #fff;
}
.account-header {
    display: flex;
    justify-content: space-between;
}
.account-item {
    margin-top: 5px;
    display: flex;
    font-size: 16px;
    justify-content: space-between;
    align-items: center;
}
.account-red {
    color: var(--red-color);
}
.account-green {
    color: var(--green-color);
}