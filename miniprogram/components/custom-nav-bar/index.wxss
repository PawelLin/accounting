    background-color: var(--primary-color);
}
.nav-bar-name, .nav-bar-title {
    display: inline-flex;
    align-items: center;
}
.nav-bar-name {
    position: absolute;
    left: 10px;
    font-weight: bold;
    font-size: 17px;
}