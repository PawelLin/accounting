page {
    height: 100%;
}
.accounting {
    padding: 0 0 calc(env(safe-area-inset-bottom) + 48px);
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    color: var(--soft-text-color);
    text-shadow: var(--soft-text-shadow);
    background-color: var(--primary-color);
    transition: background-color var(--theme-switch-duration) var(--theme-switch-timing-function);
}
.type {
    display: flex;
    justify-content: center;
}
.type-item {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 84px;
    height: 32px;
    box-shadow: var(--soft-box-shadow);
    transition: box-shadow var(--theme-switch-duration) var(--theme-switch-timing-function);
}
.type-item.active {
    box-shadow: var(--soft-box-shadow-inset);
}
.type-item:first-child {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
}
.type-item:last-child {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
}
.label {
    margin: 10px 10px 0;
    flex: 1;
    font-size: 15px;
    overflow-y: hidden;
}
.label-scroll {
    height: 100%;
    border-radius: 10px;
    box-shadow: var(--soft-box-shadow-inset);
    transition: box-shadow var(--theme-switch-duration) var(--theme-switch-timing-function);
}
.label-item {
    margin: 10px 0 0 10px;
    padding: 4px 5px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    min-width: 50px;
    border-radius: 10px;
    box-shadow: var(--soft-box-shadow);
    transition: box-shadow var(--theme-switch-duration) var(--theme-switch-timing-function);
}
.label-item.active {
    box-shadow: var(--soft-box-shadow-inset);
}
.label-skeleton::after {
    content: 'ç©º';
    visibility: hidden;
}
.label-custom {
    width: 82px;
}
.keyboard {
    margin: auto 0 0;
    border-radius: 10px;
}
.amount {
    padding: 5px 10px;
    font-size: 22px;
    text-align: right;
}
.remark {
    margin: 0 10px;
    padding: 0 10px;
    display: flex;
    align-items: center;
    border-radius: 10px;
    box-shadow: var(--soft-box-shadow);
    transition: box-shadow var(--theme-switch-duration) var(--theme-switch-timing-function);
}
.remark-input {
    flex: 1;
    margin-left: 10px;
    padding: 5px 0;
}
.button-contain {
    margin: 0 10px;
    padding-bottom: 10px;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    width: 23%;
    height: 40px;
    white-space: nowrap;
    border-radius: 10px;
    box-shadow: var(--soft-box-shadow);
    transition: box-shadow var(--theme-switch-duration) var(--theme-switch-timing-function);
}
.button-active {
    box-shadow: var(--soft-box-shadow-inset);
}
.button-number {
    font-size: 18px;
}
.button-date {
    position: relative;
}
.button-date.not-today {
    font-size: 12px;
}
.button-date-text {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}